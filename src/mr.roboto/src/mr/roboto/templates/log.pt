<html>
<head>
  <title>Mr. Roboto</title>
  <style>
    body {
      background-color: rgb(0,149,211);
    }
    p {
      color: white;
      font-size: 15px;
      text-shadow: 1px 1px 0px black;
    }
    .info, .warning, .error, .critical, .timestamp {
      font-size: 12px;
    }
    a:link {
      color: white;
    }
    a:visited {
      color: grey;
    }
    .timestamp {
      color: #CCC;
    }
    .warning {
      color: yellow;
    }
    .error, .critical {
      color: red;
    }
    pre {
      font-size: 12px;
      color: white;
      margin: 0px;
      background-color: black;
    }
  </style>
  <meta http-equiv="refresh" content="60" />
</head>
<body>
  <tal:element condition="success">
    <p>file size: ${file_size} bytes</p>
    <p>${structure: log}</p>
  </tal:element>
  <tal:element condition="not: success">
    <p>${message}</p>
  </tal:element>
</body>
</html>
