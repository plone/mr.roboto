<html>
<head>
  <title>Mr. Roboto</title>
  <style>
    body {
      background: url('static/roboto.png') no-repeat 50% 50%;
    }
    #logo {
      width: 100%;
      height: 100%;
      background-color: rgba(0,149,211, 0.5);
      color: white;
      font-size: 14px;
    }
  </style>
</head>
<body>
  <tal:element condition="success">
    <p>file size: ${file_size} bytes</p>
    <pre id="logo">${log}</pre>
  </tal:element>
  <tal:element condition="not: success">
    <p>${message}</p>
  </tal:element>
</body>
</html>
