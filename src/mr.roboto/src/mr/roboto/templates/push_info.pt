<html>
    <head>
        <title>Mr. Roboto</title>
        <link href='http://fonts.googleapis.com/css?family=Raleway:400,700' rel='stylesheet' type='text/css'/>
        <style>
            body {
                background-color: rgb(0,149,211);
                font-family: 'Raleway', sans-serif;
            }
            h2 {

            }
            #logo {
                width: 100%;
                height: 100%;
                background: url('/static/roboto.png') no-repeat 50% 50%;
            }
            ul {
                list-style-type: none
            }
        </style>
    </head>
    <body>
        <div id="options">
            <h2 tal:content="python: push.repo"></h2>
            <h2 tal:content="python: push.branch"></h2>
            <h2 tal:content="python: push.who"></h2>

            <h2>Commits</h2>
            <tal:commits repeat="commit python: push.data">
                <h3>Message</h3>
                <p tal:content="python: commit['short_commit_msg']"></p>
                <h3>Diff</h3>
                <p tal:content="structure python: commit['diff']"></p>
                <h3>Files</h3>
                <p tal:content="structure python: commit['files']"></p>
            </tal:commits>

            <h2>jenkins results</h2>
            <tal:jk repeat="job jobs">
                <h3>Date</h3>
                <p tal:content="job/date"></p>
                <h3>Job</h3>
                <p tal:content="job/jk_name"></p>
                <h3>URL</h3>
                <p tal:content="job/jk_name"></p>
                <h3>Result</h3>
                <p tal:content="job/result"></p>
            </tal:jk>
        </div>
    </body>
</html>