<html>
    <head>
        <title>Mr. Roboto</title>
        <link href='http://fonts.googleapis.com/css?family=Raleway:400,700' rel='stylesheet' type='text/css'/>
        <style>
            body {
                background-color: rgb(0,149,211);
                font-family: 'Raleway', sans-serif;
            }
            h2 {

            }
            #logo {
                width: 100%;
                height: 100%;
                background: url('/static/roboto.png') no-repeat 50% 50%;
            }
            ul {
                list-style-type: none
            }
        </style>
    </head>
    <body>
        <div id="options">
            <tal:packages repeat="version python:packages.keys()"> 
            <h2 tal:content="version">Version</h2>
            <ul tal:define="list_packages python:packages[version]">
                <li tal:repeat="package list_packages"> <span tal:replace="python:package['name']">name</span> - <span tal:replace="python:package['repo']">repo</span> - <span tal:replace="python:package['branch']">branch</span></li>
            </ul>
            </tal:packages>
        </div>
    </body>
</html>